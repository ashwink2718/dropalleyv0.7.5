<div class="row brands_top_margin">
  <div align="center" class="col-md-12">
    <h2>Current Cart</h2>    
  </div>
</div>

<% @items.each do |item| %>

  <div class="row">
    <div class="col-md-3">
      <%= image_tag item.product.main_img.url, class: "img-fluid" %>
    </div>
    <div class="col-md-4">
      <h2><%=item.product.title%></h2>
    </div>
    <div class="col-md-3">
      <h3>â‚¬ <%= item.price %></h3>
    </div>
  </div>

<% end %>


<table>
  <thead>
    <tr>
      <td>Product</td>
      <td>Title</td>
      <td>Price</td>
      <td></td>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= image_tag item.product.main_img.thumb.url %></td>
        <td><%= item.product.title %></td>
        <td><%= item.price %></td>
        <td>
          <%= form_for item, method: :delete do |f| %>
            <%= f.submit "Remove" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
