<div class="row home_top_margin">
  <%= image_tag("1_1.jpg", :class => "col col-md-4 column_width_manager d-none d-sm-block col-sm-4") %>  
  <%= image_tag("1_3.jpg", :class => "col col-md-4 column_width_manager") %>
  <%= image_tag("2_1.jpg", :class => "col col-md-4 column_width_manager d-none d-sm-block col-sm-4") %>
</div>

<div class="row">
  <div class="col-md-8 offset-md-2">
    <h1 align="center" class="mt-3"><strong>DropAlley</strong></h1>
    <h4 align="center">We combine online and offline retail to give you the most convenient shopping experience - <strong> Try & Buy </strong>. We bring products to you whenever and wherever you want so you can TRY before you BUY.</h4>
  </div>
</div>

<div class="row mt-3">

  <div align="center" class="col-md-4 offset-md-4">
    <i class="material-icons md-48">expand_more</i>
  </div>

</div>

<!-- =================================================================================== -->

<div class="row mt-5 mb-5 no-gutters">
  <div class="col-md-6">

    <h3 align="center" class="mb-3"><strong>Try & Buy Today</strong></h3>

    <hr>

    <div class="hovereffect">
      <%= image_tag "menu_tb.jpg", class: "img-fluid" %>

      
      <div class="overlay">
        <h1>Instant craving? Fashion emergency? Check out hand-picked products available for SAME day Try & Buy.</h1>
        <%= link_to "Try & Buy Now", store_path, class: "info" %>
      </div>
    

    </div>
  </div>


  <div class="col-md-6">

    <h3 align="center" class="mb-3"><strong>NextDay+ Try & Buy</strong></h3>

    <hr>

    <div class="hovereffect">  
      <%= image_tag "menu_custom.jpg", class: "img-fluid" %>

      
      <div class="overlay">
        <h1>Busy schedule? Select products from ANY of your favorite brands to Try & Buy at your convenience.</h1>
        <%= link_to "Try & Buy",new_custom_order_path, class: "info" %>
      </div>
      

    </div>
  </div>


</div>



<!-- =================================================================================== -->

<div class="row mt-5 mb-5">
  <div class="col col-md-12">
    <h2 class="the_underline mt-3" align="center"><strong>How It Works</strong></h2>
  </div>
</div>

<%= render 'layouts/works' %>


<% if user_signed_in? %>        
    
    <div class="row mt-5 mb-5">
       <div class="col col-md-8 offset-md-2">
         <div class="outerbox_signup p-5 effect1">
           <div class="innerbox_signup">
             <h2 align="center">Welcome to DropAlley</h2>
             <h4 class="mb-5" align="center"> Your dashboard is your very own special area on the site. Click on the button below to check it out.</h4>
             <%= link_to "My Dashboard", dashboard_path, class: "btn btn-block btn-lg btn-drop" %>
           </div>
         </div>
       </div> 
    </div>

<% else %>

    <div class="row mt-5 mb-5">
       <div class="col col-md-8 offset-md-2 mt-5">
         <div class="outerbox_signup p-5 effect1">
           <div class="innerbox_signup">
             <h2 align="center">What Are You Waiting For?</h2>
             <h4 class="mb-5" align="center"> By signing up you will receive the latest updates on what products and brands you can try out before you buy.</h4>
             <%= link_to "Sign-up", new_user_registration_path, class: "btn btn-block btn-lg btn-drop" %>
           </div>
         </div>
       </div> 
    </div>

<% end %>

<%= render 'layouts/footer' %>