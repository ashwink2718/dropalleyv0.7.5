<div class="row brands_top_margin">
	<div align="center" class="col-md-12">
		<h1><%= @product.title %></h1>	
	</div>
</div>

<div class="row mt-5">
		<div class="col-md-8">
			<%= image_tag @product.main_img.url, class: "img-fluid" %>
		</div>
		<div class="col-md-4">
			
			<div class="row">
				<div class="col-md-12">
					<h3><%= @product.title %></h3>
				</div>
			</div>
			
			<div class="row">
				<div class="col-md-12">
					<h4>Brand: <%= @product.brand %></h4>
				</div>
			</div>

			<div class="row">
				<div class="col-md-4">
					<h5>Size: <%= @product.size %></h5>
				</div>
				<div class="col-md-8">
					<h5>Color: <%= @product.color %></h5>
				</div>
			</div>	

			<div class="row mt-5">
				<div class="col-md-12">
					<h3>Price: </h3>
					<h3>Try before you buy for free.</h3>
				</div>
			</div>	

			<div class="row mt-5">
				<div class="col-md-12">
					<%= link_to "Try & Buy", products_path, class: "btn btn-drop btn-lg btn-block effect1" %>
				</div>
			</div>	

		</div>
</div>

<div class="row mt-3">
	
	<div class="col-md-6">
		<%= image_tag @product.img1.url, class: "img-fluid" %>
	</div>

	<div class="col-md-6">
		<%= image_tag @product.img2.url, class: "img-fluid" %>
	</div>	

</div>

<div class="row mt-3">

	<div class="col-md-6">
		<%= image_tag @product.img3.url, class: "img-fluid" %>
	</div>	

	<div class="col-md-6">
		<%= image_tag @product.img4.url, class: "img-fluid" %>
	</div>

</div>

<div class="row mt-5 mb-5">
   <div class="col col-md-8 offset-md-2">
     <div class="outerbox_signup p-5 effect1">
       <div class="innerbox_signup">
         <h2 align="center">Like what you see?</h2>
         <h4 class="mb-5" align="center"> Try it on and then buy it if you like how it feels and fits. Add it to your Try & Buy request by clicking on the button below.</h4>
         <%= link_to "Add to Try & Buy", new_user_registration_path, class: "btn btn-block btn-lg btn-drop" %>
       </div>
     </div>
   </div> 
</div>



<%= render 'layouts/footer' %>