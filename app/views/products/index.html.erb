<div class="row brands_top_margin">
	<div class="col col-md-12">
		<h1 align="center" class="mt-3">Products For Instant Try & Buy</h1>		
	</div>
</div>

<hr>

<div class="row mt-5 mb-5">

	<% @products.each do |product| %>	

		<div class="col-md-4">
			
	    <div class="hovereffect">
	        
	        

        	<div class="overlay">

          	 <h2><%= product.title %></h2>
           	<h2><%= product.description %></h2>
           	<%= link_to "View Product", product_path(product), class:"info" %>
           	<%= link_to "Add To Cart", order_items_path(product_id: product.id, quantity:1), method: "post", class: "info" %>
        	
        	</div>
	    
	    </div>

  	</div>

  <% end %>  

</div>

<%= render 'layouts/footer' %>