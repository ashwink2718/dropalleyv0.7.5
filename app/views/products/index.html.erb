<div class="row brands_top_margin">
	<div class="col col-md-12">
		<h1 align="center" class="mt-3">Products For Instant Try & Buy</h1>		
	</div>
</div>

<hr>

<div class="row mt-5">
	<% @products.each do |product| %>
		<div class="col-md-4">

			<div class="product_block effect1 p-3">
			
				<div class="row">
					<div class="col-md-12">
						<%= image_tag product.main_img.url, class: "col-md-12" %>
					</div>
				</div>

				<div class="row mt-2">
					<div align="center" class="col-md-12">
						<h4><%= product.title %></h4>
					</div>
				</div>

				<div class="row mt-3">
					<div class="col-md-6">
						<%= link_to "View Product", product_path(product), class:"btn btn-drop btn-block" %>
					</div>

					<div class="col-md-6">
						<%= link_to "Add To Cart", order_items_path(product_id: product.id, quantity:1), method: "post", class: "btn btn-drop btn-block"%>
					</div>

				</div>

			</div>
			
		</div>	
	<% end %>
</div>
