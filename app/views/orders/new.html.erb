<div class="row brands_top_margin">
	<div class="col-md-12">
		<h3 align="center">Enter Delivery Details</h3>
	</div>
</div>

<hr>

<div class="row mt-5">

	<div class="col-md-12">
		
		<%= form_for @order, url: checkout_path, :html => {class:"form"} do |f| %>	


			<div class="row">
				<div class="col-md-6">
					
						<div class="row">
							<div class="col-md-12">
								<div class="form-group">
									<%= f.label :name %>
									<%= f.text_field :name, class: "form-control" %>
								</div>
							</div>
						</div>
					
					<div class="row">
						<div class="col-md-12">
							<div class="form-group">
								<%= f.label :email %>
								<%= f.email_field :email, class: "form-control", readonly: "true" %>
							</div>		
						</div>
					</div>

				</div>
			
				<div class="col-md-6">
					<div class="row">
						<div class="col-md-12">
							<div class="form-group">
								<%= f.label :street, "Street*" %>
								<%= f.text_field :street, class: "form-control" %>
							</div>
						</div>
					</div>

					<div class="row">
					
						<div class="col-md-6">
							<div class="form-group">
								<%= f.label :door %>
								<%= f.text_field :door, class: "form-control" %>
							</div>
						</div>

						<div class="col-md-6">
							<div class="form-group">
								<%= f.label :city %>
								<%= f.text_field :city, class: "form-control" %>
							</div>
						</div>

					</div>

				<div class="row">
					
					<div class="col-md-6">
						<div class="form-group">
							<%= f.label :zipcode %>
							<%= f.text_field :zipcode, class: "form-control" %>
						</div>
					</div>

					<div class="col-md-6">
						<div class="form-group">
							<%= f.label :phone, "Mobile Number*" %>
							<%= f.text_field :phone, class: "form-control" %>
						</div>
					</div>

				</div>	


				</div>

			</div>
			
			<hr>
			
			<div class="row">

				<div class="col-md-6">
					<p>Remember, you do not have to pay anything for the trying out the products. We will charge you only if you decide to buy something.</p>
				</div>


				<div class="col-md-3 offset-md-3">
					<div class="form-group">
						<%= f.submit "Checkout", class: "btn btn-block btn-lg btn-drop" %>
					</div>		
				</div>
			</div>
			
		<% end %>	

	</div>

</div>