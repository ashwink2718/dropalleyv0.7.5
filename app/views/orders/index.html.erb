<div class="row brands_top_margin">
	<div align="left" class="col-md-12">
		<h1 class="brands_top_margin">Instant Try & Buy Orders</h1>		
	</div>
</div>

<hr>

<div class="row mb-5">
	
	<% @orders.each do |order| %>
		<% if current_user.email == order.email %>	
			
			<div class="col-md-4 mt-3">
				<div class="outerbox_orderlist p-3">
					
					<div class="row">
						<div class="col-md-3">
							<i class="fa fa-<%= order.order_icon %>">	</i>
						</div>
						<div class="col-md-9 align-self-center text-right">
							<h5>Try & Buy Date: <%= DateTime.parse(order.created_at.to_s).strftime("%a %d %b %Y") %> </h5>	
						</div>
					</div>
					
					<hr>

					<div class="row mt-2">
							<% order.items.each do |item| %>
								<div class="col-md-3">
									<%= image_tag item.product.main_img.url, class: "img-fluid" %>
								</div>	
							<% end %>
					</div>
					
					<hr>

					<div class="row">
						<div class="col-md-12">
							<p><strong>Order Status: <%= order.order_msg %> </strong></p>	
						</div>
					</div>
					
				</div>
			</div>
		
		<% end %>
	<% end %>

</div>

<div class="row">
	<div align="left" class="col-md-8">
		<h1 class="brands_top_margin">Custom Try & Buy Orders</h1>		
	</div>
</div>

<hr>

<div class="row mb-5">
	
	<% @custom_orders.each do |custom_order| %>
		<% if current_user.email == custom_order.email %>	
			
			<div class="col-md-4 mt-3">
				<div class="outerbox_orderlist p-3">
					
					<div class="row">
						<div class="col-md-3">
							<i class="fa fa-<%= custom_order.order_icon %>">	</i>
						</div>
						<div class="col-md-9 align-self-center text-right">
							<h5>Try & Buy Date: <%= DateTime.parse(custom_order.created_at.to_s).strftime("%a %d %b %Y") %> </h5>	
						</div>
					</div>
				
					<hr>

					<div class="row">
						<div class="col-md-12">
							<p><strong>Order Status: <%= custom_order.order_msg %> </strong></p>	
						</div>
					</div>
					
				</div>
			</div>
		
		<% end %>
	<% end %>

</div>

<div class="row">
	<div class="col-md-4">
		<h1>Support</h1>
		<hr>
	</div>
</div>

<div class="row mb-5">
	<div class="col-md-4">
		<% @users.each do |user| %>
        <% if user.id != current_user.id && user.admin? %>
          <div align="left" class="outerbox_orderlist p-4">
            <h4>Talk to us by clicking on the button below </h4>
            <%= link_to "Conversations", conversations_path(sender_id: current_user.id, recipient_id: user.id), method: "post", class: "btn btn-drop btn-block btn-lg"%>
          </div>
      <% end %>
     <% end %>
	</div>
</div>


<%= render 'layouts/footer' %>